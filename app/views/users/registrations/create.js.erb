$("ul.errors").html("")
<%- if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>")).css({'background-color':'red'})
  <% end %>
<%- else %>
  $.fancybox.close();
  window.location = "<%= root_url %>"
<%- end %>














